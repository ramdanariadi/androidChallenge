<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ramdan.myapplication.restaurant.detail.fragments.RestaurantHomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rest_desc_photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="0.07"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/rest_desc_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Name"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/rest_dec_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.12"
            android:paddingLeft="10dp"
            android:text="Rate"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/rest_desc_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="Address"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>
